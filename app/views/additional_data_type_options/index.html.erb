
<h2>Workout Type: <%= @workout_type.name %> </h2>

<%= form_with() do |form| %>
  <div class="field">
    <%= form.label :additional_data_type %>
    <%= form.collection_select :additional_data_type_id, @additional_data_types, :id, :name, {selected: @additional_data_type.id, include_blank: false},
                               {id: "SelectAdditionalDataType", onchange: 'var id = $("#SelectAdditionalDataType option:selected").val(); window.location.href = "/additional_data_types/" + id ' } %>
  </div>
<% end %>

<h1>Dropdown Options</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Order in list</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @additional_data_type_options.each_with_index do |adto, index| %>
      <tr>
        <td><%= adto.name %></td>
        <td><%= adto.order_in_list %></td>
        <td><%= link_to 'Edit', edit_additional_data_type_option_path(adto) %></td>
        <td><%= link_to 'Delete', adto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= (link_to 'Move Up', "/additional_data_type_options/#{adto.id}/move_up", method: :post) unless index == 0 %></td>
        <td><%= (link_to 'Move Down', "/additional_data_type_options/#{adto.id}/move_down", method: :post) unless index == @additional_data_type_options.count-1 %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Option', new_additional_data_type_additional_data_type_option_path(@additional_data_type) %>

<div>
  <%= link_to 'Back', workout_type_additional_data_types_path(@workout_type) %>
</div>
